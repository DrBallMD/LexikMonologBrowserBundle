<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" rel="stylesheet">
        <link href="{{ asset('bundles/lexikmonologbrowser/css/bootstrap-datetimepicker.min.css') }}" rel="stylesheet">
    </head>
    <body>
        <div class="container">
            {% for type, messages in app.session.flashbag.all() %}
                {% for message in messages %}
                    <div class="alert alert-{{ type }}">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}
            
            <div class="container-fluid">
            {% block monolog_browser_content %}
            {% endblock %}
            </div>
        </div>

        <script src="{{ asset('bundles/lexikmonologbrowser/js/moment-with-locales.min.js') }}"></script>
        <script src="//code.jquery.com/jquery-2.1.4.min.js"></script>
        <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
        <script src="{{ asset('bundles/lexikmonologbrowser/js/bootstrap-datetimepicker.min.js') }}"></script>
        <script src="{{ asset('bundles/lexikmonologbrowser/js/log.js') }}"></script>
    </body>
</html>
